{% extends 'base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/v/dt/jq-3.2.1/jq-3.2.1/dt-1.10.16/b-1.4.2/b-html5-1.4.2/datatables.min.js"
    ></script>
{% endblock %}
{% block okno %}

        <h3 class="window-head">Lista Dru≈ºyn</h3>
    <span class="pull-left"><a class="btn btn-primary" href="{{ path('addNewTeam')}}"> Add team</a></span>
    <span class="pull-right"><a class="btn btn-primary" href="{{ path('addNewPlayer')}}"> Add player</a></span>
    <table class="table table-bordered" id="teams">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>
                    <a href="{{ path('playersTeam', {'teamId' : team.id}) }}" class="btn btn-default">Players</a>
                    <a href="{{ path('deleteTam', {'id' : team.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <script defer>
        $(document).ready(function () {
            $('#teams').DataTable({
                ordering: false,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.10/i18n/Polish.json'
                }

            });
        });
    </script>
{% endblock %}